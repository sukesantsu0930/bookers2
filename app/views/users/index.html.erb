<div class="container">
<div class="row">
  <div class="col-md-3">
    <%= render 'devise/shared/user_info', user: @user %>
    <%= render 'books/form', book: @book %>
  </div>
  <div class="col-md-8 offset-md-1">
    <h1>Users</h1>
    <table class="table">
      <thead>
        <tr>
          <th>Image</th>
          <th>Name</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td>
              <% if user.profile_image.attached? %>
                <%= image_tag user.profile_image, size: "50x50" %>
              <% else %>
                <%= image_tag 'no_image.png', size: "50x50" %>
              <% end %>
            </td>
            <td><%= user.name %></td>
            <td><%= link_to "Show", user_path(user.id) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
</div>